# Pipeline Pulse Environment Configuration Example
# Copy this file to backend/.env and update with your actual values

# Application Settings
APP_NAME="Pipeline Pulse"
APP_ENV=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Authentication Mode
# Options: traditional (email/password), zoho (Zoho OAuth only), hybrid (both)
AUTH_MODE=zoho

# Database
DATABASE_URL=postgresql+psycopg://pipeline_pulse:pipeline_pulse@localhost:5432/pipeline_pulse
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Security
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Zoho CRM OAuth Configuration
# Get these from https://api-console.zoho.com/
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REDIRECT_URI=http://localhost:8000/api/v1/auth/zoho/callback
ZOHO_DATA_CENTER=IN  # Options: US, EU, IN, AU, CN
ZOHO_API_USER_EMAIL=admin@your-company.com
# Refresh token will be automatically generated during first login
ZOHO_REFRESH_TOKEN=

# Currency Configuration
BASE_CURRENCY=SGD
CURRENCY_API_KEY=your-currency-api-key
CURRENCY_CACHE_DAYS=7

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=INFO

# CORS Origins
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:5175"]

# Frontend URL
FRONTEND_URL=http://localhost:5173

# AWS (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-1

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@pipeline-pulse.com