# Pipeline Pulse Backend Environment Variables

# App Settings
APP_NAME="Pipeline Pulse"
DEBUG=False

# Database (Production uses PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/pipeline_pulse
# For local development, you can still use SQLite:
# DATABASE_URL=sqlite:///./pipeline_pulse.db

# Zoho CRM Integration
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token_here
ZOHO_BASE_URL=https://www.zohoapis.com/crm/v2

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads

# Currency Settings
BASE_CURRENCY=SGD
# Get your free API key from https://currencyfreaks.com/
CURRENCY_API_KEY=your_currencyfreaks_api_key_here
CURRENCY_CACHE_DAYS=7

# SAML SSO Configuration
SAML_ENTITY_ID=http://localhost:5173
SAML_ACS_URL=http://localhost:5173/auth/saml/acs
SAML_SLS_URL=http://localhost:5173/auth/saml/logout

# Zoho Directory SAML IdP Configuration (Get these from Zoho Directory after creating the app)
ZOHO_SAML_ENTITY_ID=https://accounts.zoho.com/samlresponse/your-org-id
ZOHO_SAML_SSO_URL=https://accounts.zoho.com/samlauthrequest/your-org-id
ZOHO_SAML_SLS_URL=https://accounts.zoho.com/samllogout/your-org-id
ZOHO_SAML_X509_CERT=-----BEGIN CERTIFICATE-----\nYOUR_X509_CERTIFICATE_HERE\n-----END CERTIFICATE-----

# JWT Configuration for SAML Sessions
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Production Configuration
CORS_ORIGINS=https://1chsalesreports.com,https://www.1chsalesreports.com
ENVIRONMENT=production

# Optional Redis for caching
REDIS_URL=redis://localhost:6379
