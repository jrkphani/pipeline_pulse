# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/pipeline_pulse

# Application Environment
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Zoho CRM Configuration
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REDIRECT_URI=http://localhost:8000/auth/zoho/callback
ZOHO_REGION=US

# Currency API
CURRENCY_API_KEY=your-currency-freaks-api-key

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1