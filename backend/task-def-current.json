{
    "containerDefinitions": [
        {
            "name": "pipeline-pulse-backend",
            "image": "272858488437.dkr.ecr.ap-southeast-1.amazonaws.com/pipeline-pulse:latest",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "AWS_REGION",
                    "value": "ap-southeast-1"
                },
                {
                    "name": "DB_ENDPOINT",
                    "value": "pipeline-pulse-db-dev.c39du3coqgj0.ap-southeast-1.rds.amazonaws.com"
                },
                {
                    "name": "DB_USER",
                    "value": "postgres"
                },
                {
                    "name": "ENVIRONMENT",
                    "value": "production"
                },
                {
                    "name": "DB_NAME",
                    "value": "pipeline_pulse"
                },
                {
                    "name": "CORS_ORIGINS",
                    "value": "https://1chsalesreports.com,https://www.1chsalesreports.com,https://api.1chsalesreports.com,https://app.1chsalesreports.com"
                },
                {
                    "name": "BASE_URL",
                    "value": "https://api.1chsalesreports.com"
                },
                {
                    "name": "S3_BUCKET_NAME",
                    "value": "pipeline-pulse-uploads"
                },
                {
                    "name": "FRONTEND_URL",
                    "value": "https://1chsalesreports.com"
                }
            ],
            "mountPoints": [],
            "volumesFrom": [],
            "secrets": [
                {
                    "name": "ZOHO_CLIENT_ID",
                    "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:272858488437:secret:pipeline-pulse/zoho/client-id-qLTcct"
                },
                {
                    "name": "ZOHO_CLIENT_SECRET",
                    "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:272858488437:secret:pipeline-pulse/zoho/client-secret-g5Rbef"
                },
                {
                    "name": "ZOHO_REFRESH_TOKEN",
                    "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:272858488437:secret:pipeline-pulse/zoho/refresh-token-mMaxDV"
                },
                {
                    "name": "ZOHO_BASE_URL",
                    "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:272858488437:secret:pipeline-pulse/zoho/base-url-kVG5rZ"
                },
                {
                    "name": "ZOHO_ACCOUNTS_URL",
                    "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:272858488437:secret:pipeline-pulse/zoho/accounts-url-uSUGWo"
                },
                {
                    "name": "CURRENCY_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:272858488437:secret:pipeline-pulse/app-secrets-3V0Qo0:currency_api_key::"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/pipeline-pulse-prod",
                    "awslogs-region": "ap-southeast-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8000/health || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            },
            "systemControls": []
        }
    ],
    "family": "pipeline-pulse-prod",
    "taskRoleArn": "arn:aws:iam::272858488437:role/pipeline-pulse-direct-access-task-role",
    "executionRoleArn": "arn:aws:iam::272858488437:role/pipeline-pulse-direct-access-execution-role",
    "networkMode": "awsvpc",
    "volumes": [],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024"
}
