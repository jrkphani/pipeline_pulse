# Pipeline Pulse Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=Pipeline Pulse
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production

# Database
DATABASE_URL=sqlite:///./pipeline_pulse.db

# CORS Settings (Frontend URLs)
ALLOWED_HOSTS=["http://localhost:5173", "http://localhost:3000"]

# Zoho CRM Integration
# Get these from https://api-console.zoho.com/ (or your data center's console)
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token

# API Version (v8 recommended, v6 for compatibility)
ZOHO_API_VERSION=v8

# For US data center (default for v8)
ZOHO_BASE_URL=https://www.zohoapis.com/crm/v8
ZOHO_ACCOUNTS_URL=https://accounts.zoho.com

# For other data centers, update accordingly:
# India: https://www.zohoapis.in/crm/v8 & https://accounts.zoho.in
# EU: https://www.zohoapis.eu/crm/v8 & https://accounts.zoho.eu  
# Australia: https://www.zohoapis.com.au/crm/v8 & https://accounts.zoho.com.au
# China: https://www.zohoapis.com.cn/crm/v8 & https://accounts.zoho.com.cn

# Live CRM Integration
APP_BASE_URL=http://localhost:8000
WEBHOOK_TOKEN=your-secure-webhook-token-here

# Currency Exchange
BASE_CURRENCY=SGD
CURRENCY_API_KEY=your_currency_freaks_api_key_optional
CURRENCY_CACHE_DAYS=7

# Security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads